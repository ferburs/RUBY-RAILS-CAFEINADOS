<p style="color: green"><%= notice %></p>

<%= render @funcion %>


<div>
  <% if user_signed_in? %>
    <% @user = current_user%>
    <td><%= button_to 'Comprar ticket' ,{:controller => 'tickets', :action => 'create', :user_id => current_user.id, :funcion_id => @funcion.id}, {:method => :post} %></td>
    <% if @user.admin? %>
  <%= link_to "Edit this funcion", edit_funcion_path(@funcion) %> |
  <%= link_to "Back to funcions", funcions_path %>

  <%= button_to "Destroy this funcion", @funcion, method: :delete %>
  <% @user = current_user%>
    <% end %>
  <% end %>
</div>
