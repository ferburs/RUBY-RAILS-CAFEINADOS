
<%= form_with(model: funcion) do |form| %>
  <% if funcion.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(funcion.errors.count, "error") %> prohibited this funcion from being saved:</h2>

      <ul>
        <% funcion.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <% @peliculas = Pelicula.all%>
    <%= form.label :pelicula_id, style: "display: block" %>
    <%= form.select :pelicula_id, @peliculas.collect { |pelicula| [pelicula.titulo, pelicula.id] } %>

  </div>

  <div>
    <% @salas = Sala.all %>
    <%= form.label :sala_id, style: "display: block" %>
    <%= form.select :sala_id, @salas.collect { |sala| [sala.nombre, sala.id] } %>
  </div>

  <div>
    <%= form.label :fecha, style: "display: block" %>
    <%= form.datetime_field :fecha %>
  </div>

  <div>
    <%= form.label :precio, style: "display: block" %>
    <%= form.number_field :precio , value:1,min:1,step:1%>
  </div>

  <div>
    <br>
    <%= form.submit %>
  </div>
<% end %>