<%= form_with model: @profile do |f| %>
  <div class="container">
    <div class="row align-items-start">
      <div class="form-group col justify-content-center align-items-center">
        <%= image_tag avatar_url(current_user) %>
      </div>
      <div class ="form-group col">
        <%= f.label :Nombre  %>
        <%= f.text_field :name, class: "form-control" %>
        <br>
        <%= f.label :Apellido %>
        <%= f.text_field :last_name, class: "form-control" %>
        <br>
        <%= f.label :Direccion %>
        <%= f.text_field :address, class: "form-control" %>
        <br>
        <%= f.label :Pais %>
        <%= f.text_field :country, class: "form-control" %>
        <br>
        <%= f.label :Ciudad %>
        <%= f.text_field :city, class: "form-control" %>
        <br>
        <%= f.label :CodigoPostal %>
        <%= f.text_field :zip, class: "form-control" %>
      </div>
    </div>
  </div>
  <br><br>
  <div class="row justify-content-center align-items-center">
    <div class="col-sm-4 justify-content-center">
      <%= f.submit "Update", class: "btn btn-warning form-control" %>
    </div>
  </div>
<% end %>

<br><div class="container">
  <div class="btn-group" role="group" >
    <h2 class = "padding" >Historial de compras</h2>
    <% if user_signed_in? %>
      <% @user = current_user%>
    <% end %>
  </div>
  <div class="row row-cols-6">
    <% tickets = @profile.user.tickets %>
      <% tickets.each do |ticket| %>
      <div class="col padding marg card">
        <figure>
          <img src= "<%= url_for(ticket.funcion.pelicula.imagen) %>"
                width="165" height="228">
          <%#= image_tag(url_for(ticket.funcion.pelicula.imagen))%>
          <div class="card-body">
            <span>Titulo: <%= ticket.funcion.pelicula.titulo %> </span><br>
            <span>Precio: $ <%= ticket.funcion.precio %> </span><br>
            <span>Sala: <%= ticket.funcion.sala.nombre %> </span><br>
            <span>Fecha: <%= ticket.funcion.fecha %> </span>
          </div>
        </figure>
      </div>
    <% end %>
  </div>
</div>

</div>