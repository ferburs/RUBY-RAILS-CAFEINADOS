<div class="container">
  <h2 class = "padding" >Cartelera</h2>
  <div class="row d-flex">
    <% @peliculas.each do |pelicula| %>
      <div class="margin-top col col-md-2 card marg">
        <figure>
          <%=image_tag(url_for(pelicula.imagen))%>
        </figure>
        <div class="card-body">
          <h5 class="card-title"><%=pelicula.titulo%></h5>
          <figcaption>
            <span> <%= link_to "Comprar Entrada", pelicula %> </span>
          </figcaption>
        </div>
      </div>

    <% end %>
  </div>
</div>


<% if user_signed_in? %>
  <% @user = current_user%>
  <% if @user.admin? %>
    <div>
      <br>
      <h1>Panel de Administrador</h1>
      <%= button_to link_to "Agregar pelicula", new_pelicula_path %>
    </div>

  <% end %>
<% end %>