  </div>
</div>




<div class="container mt-4">
  <div class="card">
    <div class="btn-group" role="group" >
      <h2 class = "padding" ><strong> Funciones  </strong> </h2>
      <% if user_signed_in? %>
        <% @user = current_user%>
        <% if @user.admin? %>
          <h4 class = " marg" >
            <%= link_to "Agregar Funcion", new_funcion_path %>
          </h4>
        <% end %>
      <% end %>
    </div>

    <div class="row row-cols-4">
      <%  @pelicula.funcions.map do |item|%>
        <div class = "col padding marg">
          <div class="card" style="width: 18rem;">
            <div class="card-body padding marg">
              <h5 class="card-title">
                <script>
                    date = new Date().toLocaleDateString();
                    document.write(date);
                </script>
                <%= item.fecha%>

              </h5>
              <p class="card-text"><%= item.sala.nombre %></p>
              <%= button_to 'Seleccionar funciÃ³n', funcion_path(item), method: :get %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
  <br>
  <br>
</div>

<div class="container mt-4">
  <div class="card">
    <div class="row">
      <div class = "col-md-10">
        <h2 class = "padding" ><strong>Funciones  </strong> </h2>
        <%= form_with model: @function do |form| %>
          <%= form.date_field :fechaingresada%>
          <%= form.submit "Buscar Funciones"%>
        <% end %>
        <input id = "fechaingresada" type = "date" name = "fechaingresada" onInput="buscarentrada"/>
        <br>
        <ul class="col-sm-8 items-wrap">
          <%  @pelicula.funcions.map do |item|%>

            <% if params[:fechaingresada] === params[:fechaingresada] %>
              <%= params[:fechaingresada] %>

            <% end %>

            </ul>
          <% end %>
          </div>

    </div>
  </div>

</div>



