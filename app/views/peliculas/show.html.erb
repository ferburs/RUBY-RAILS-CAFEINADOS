<div class="container mt-5">
  <div class="card">
    <div class="row">
      <div class="col-md-3 ">
        <figure class = "padding">
          <%=  image_tag(url_for(@pelicula.imagen))  %>
        </figure>
      </div>
      <div class="col-md-8">

        <h2 class="card-title mt-3"><%= @pelicula.titulo%></h2>
        <p> <%= @pelicula.descripcion%></p>

        <h6> <span> Genero: <%= @pelicula.genero%> </span> </h6>
